@model LoginModel
@{
    Layout="_Layout2"; 
}
<style>
    /* Sayfayı ve body içeriğini dikey ve yatayda tam ortalamak için */

    html, body {
        height: 100%;
    }

    body {
        margin: 0;
        display: flex;
        align-items: center;
        justify-content: center;
    }

    /* Formun tam genişlikte görünmesini sağlar */
    .card {
        width: 100%;
    }
</style>
<div class="container">
    <div class="row justify-content-center mt-5">
        <div class="col-md-8 col-lg-6">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title text-center">Giriş Yap </h5>
                    <form asp-controller="Admin" asp-action="Login" method="post" enctype="multipart/form-data">
                        <div asp-validation-summary="All" class="text-danger"></div>
                        <div class="form-group row">
                            <label for="email" asp-for="Email" class="col-sm-3 col-form-label">Email:</label>
                            <div class="col-sm-9">
                                <input type="email" asp-for="Email" class="form-control" id="email" placeholder="Enter your email">
                                <span asp-validation-for="Email" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="form-group row">
                            <label for="password" asp-for="Password" class="col-sm-3 col-form-label">Password</label>
                            <div class="col-sm-9">
                                <input type="password" asp-for=Password class="form-control" id="password" placeholder="Enter your password">
                                <span asp-validation-for="Password" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="form-group row">
                            <div class="col-sm-9 offset-sm-3">
                                <button type="submit" class="btn btn-primary btn-block mt-3">Register</button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>