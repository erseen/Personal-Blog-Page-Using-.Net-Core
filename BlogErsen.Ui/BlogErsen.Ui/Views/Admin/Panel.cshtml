    <!-- Bootstrap JS ve jQuery kütüphaneleri (sayfanın sonunda yüklenmeli) -->
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>

    <script>
        // Örnek veriler (gerçek verileri bu değişkenlere atanması gerekmektedir)
        const dataValue = 75;
        const remainingValue = 100 - dataValue;

        // Chart oluşturma
        const ctx = document.getElementById("myChart").getContext("2d");
        const myChart = new Chart(ctx, {
            type: "doughnut",
            data: {
                datasets: [{
                    data: [dataValue, remainingValue],
                    backgroundColor: ["rgba(75, 192, 192, 1)", "rgba(255, 99, 132, 1)"]
                }],
                labels: ["Veri", "Kalan"]
            },
            options: {
                cutoutPercentage: 80, // İç kısmın boşluğu yüzde olarak ayarlayın
                responsive: true
            }
        });
    </script>
